@using OOP_Project.Entity
@model List<Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>

    <div class="container">
        <h2>Ürün Listesi</h2>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Ürün İsmi</th>
                    <th>Fiyat</th>
                    <th>Stok</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.ProductName</td>
                        <td>@item.ProductPrice</td>
                        <td>@item.Stock</td>
                        <td><a href="/Product/DeleteProduct/@item.Id" class="btn btn-warning">Ürün Sil</a></td>
                        <td><a href="/Product/UpdateProduct/@item.Id" class="btn btn-primary">Ürün Düzenle</a></td>

                    </tr>


                </tbody>
            }
        </table>
        <a href="/Product/AddProduct/" class="btn btn-primary">Yeni Ürün Ekle</a>
    </div>

</body>
</html>


